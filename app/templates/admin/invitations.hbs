<h1>Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>E-mail</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |invitation|}}
    <tr>
      <th>{{invitation.id}}</th>
      <td>{{invitation.email}}</td>
      <div class="panel-footer text-right">
        <button class="btn btn-danger btn-xs" {{action 'deleteInvitation' invitation}}>Delete</button>
      </div>
    </tr>
  {{/each}}
  </tbody>
</table>
